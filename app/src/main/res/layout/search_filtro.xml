<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tex_size_xxlarge"
        android:padding="@dimen/dim_5"
        android:textColor="@color/white"
        android:text="Digite o número do episódio:"/>

    <LinearLayout android:id="@+id/layoutred" android:layout_width="match_parent" android:layout_height="@dimen/height">

       <EditText android:id="@+id/searchQuery"
            android:background="@color/gray_215"
            android:paddingLeft="@dimen/dim_5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:hint="Ex: 225"
            android:maxLines="1"
            android:layout_weight="2.8"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:imeActionLabel="@string/pesquisar" />

        <ImageButton android:id="@+id/btn_search" android:background="@drawable/ui_button_green_two" android:layout_width="@dimen/height" android:layout_height="match_parent" android:src="@drawable/ico_search" android:layout_weight="1.0" android:contentDescription="@string/desc" />
    </LinearLayout>

</LinearLayout>